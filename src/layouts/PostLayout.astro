---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../section/Footer.astro";
import Header from "../section/Header.astro";
import Layout from "./Layout.astro";

const { headline, title, description, redirect = "" } = Astro.props;
---

<html lang="en">
	<BaseHead description={description} title={title} />
	<body>
		<Header />
		<div class="layout_wrapper">
			<div class="wrapper_wrapper">
				<!-- <h1 class="page_headline">{headline}</h1> -->
				<slot />
			</div>
			<div class="footer">
				<Footer />
			</div>
		</div>
		<style is:global>
			:root {
				--background-color: #ffffff;
				--neutral-color: #1a1a1b;
				--theme-color: #ff6a00;
			}
			* {
				box-sizing: border-box;
				color: black;
				/* border: 1px solid red; */
			}
			html,
			body {
				font-family: system-ui, sans-serif;
				width: 100%;
				height: 100%;
				margin: 0px;
				padding: 0px;
				overflow-x: hidden;
				background-color: var(--background-color);
			}
			h1 {
				margin: 0;
			}
			h2 {
				margin-bottom: 0;
			}

			p {
				line-height: 1.5;
				letter-spacing: 1px;
				margin: 0.2rem;
			}

			.background_image {
				position: fixed;
				z-index: -1;
				object-fit: none;
				height: 100vh;
				width: 100vw;
				filter: grayscale(1);
			}
			.layout_wrapper {
				margin: auto;
				background-color: var(--background-color);
				padding: 0.5rem;
				color: white;
				margin-top: 2rem;
			}

			.page_headline {
				/* font-size: 3.55rem; */
				margin: 0.5rem 0 0 0;
				line-height: 0.85;
				font-weight: 800;
				text-align: left;
			}
			@media (min-width: 768px) {
				.page_headline {
					/* font-size: 5rem; */
				}
				.layout_wrapper {
					max-width: 56rem /* 896px */;
					padding: 0 4.5rem;
				}
			}
			@media (min-width: 1024px) {
				.wrapper_wrapper {
					display: grid;
				}
				.layout_wrapper {
					display: grid;
					grid-template: 1fr / minmax(0, 37.5rem) 18.75rem 1fr;
					max-width: 72rem /* 1152px */;
				}
				.footer {
					grid-column: 1/ 3;
				}
			}
			@media (min-width: 1280px) {
				.layout_wrapper {
					max-width: 80rem /* 1280px */;
				}
				.wrapper_wrapper {
					grid-column: 1/3;
				}
				.footer {
					grid-column: 1/4;
				}
			}
		</style>
	</body>
</html>
