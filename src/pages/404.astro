---
import BaseHead from "../components/BaseHead.astro";
import Layout from "../layouts/Layout.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="404 Page" description="404 Page Not Found Return Home" />
		<title>404 Page</title>
	</head>
	<Layout headline="404 Page">
		<div class="error_wrapper">
			<p class="text-3xl font-semibold text-white">
				Sorry, we couldn't find this page.
			</p>
			<p class="mt-4 mb-8 text-lg text-white">
				But dont worry, you can find plenty of other things on our homepage.
			</p>
			<a rel="noopener noreferrer" href="/">Back to homepage</a>
		</div>
	</Layout>

	<style>
		.error_wrapper {
			background-color: rgba(0, 0, 0, 0.859);
			padding: 1rem;
			padding-bottom: 4rem;
		}

		a {
			color: black;
			padding: 1rem;
			margin: 1rem 0;
			background-color: white;
			box-shadow: inset 0 0 5px #000000;
		}
	</style>
</html>
